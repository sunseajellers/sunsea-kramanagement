rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // HELPER FUNCTIONS
    // ========================================
    
    function isAuthenticated() {
      return request.auth != null && request.auth.uid != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // ========================================
    // USERS COLLECTION
    // ========================================
    match /users/{userId} {
      // Any authenticated user can read their own document
      // Admins can read all user documents
      allow read: if isOwner(userId) || isAdmin();
      allow create: if (isOwner(userId) && request.resource.data.isAdmin == false) || isAdmin();
      allow update: if isOwner(userId) && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin', 'roleIds', 'isActive']);
      allow update, delete: if isAdmin();
    }
    
    // ========================================
    // TASKS COLLECTION
    // ========================================
    match /tasks/{taskId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // ========================================
    // KRAs COLLECTION
    // ========================================
    match /kras/{kraId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // ========================================
    // TEAMS COLLECTION
    // ========================================
    match /teams/{teamId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }
    
    // ========================================
    // NOTIFICATIONS COLLECTION
    // ========================================
    match /notifications/{notificationId} {
      allow read, write: if isAuthenticated();
    }
    
    // ========================================
    // REMINDERS COLLECTION
    // ========================================
    match /reminders/{reminderId} {
      allow read, write: if isAuthenticated();
    }
    
    // ========================================
    // TEMPLATES COLLECTION
    // ========================================
    match /taskTemplates/{templateId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }
    
    // ========================================
    // KRA TEMPLATES
    // ========================================
    match /kraTemplates/{templateId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }
    
    // ========================================
    // PERFORMANCE PARAMETERS
    // ========================================
    match /performanceParameters/{paramId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }
    
    // ========================================
    // FILTER PRESETS
    // ========================================
    match /filterPresets/{presetId} {
      allow read, write: if isAuthenticated();
    }
    
    // ========================================
    // WEEKLY REPORTS
    // ========================================
    match /weeklyReports/{reportId} {
      allow read, write: if isAuthenticated();
    }
    
    // ========================================
    // LEGACY COLLECTIONS
    // ========================================
    match /roles/{roleId} { allow read, write: if isAdmin(); }
    match /permissions/{permissionId} { allow read, write: if isAdmin(); }
    match /role_permissions/{rpId} { allow read, write: if isAdmin(); }
    
    // ========================================
    // TASK UPDATES (Employee Status Updates)
    // ========================================
    match /taskUpdates/{updateId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }
    
    // ========================================
    // KPIs (Weekly Performance Metrics)
    // ========================================
    match /kpis/{kpiId} {
      allow read, write: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // ========================================
    // HEADER CONFIG
    // ========================================
    match /header_config/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // ========================================
    // ADMIN LOGS
    // ========================================
    match /admin_logs/{logId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
    }
    
    // ========================================
    // NOTIFICATION RULES (Admin Config)
    // ========================================
    match /notificationRules/{ruleId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // ========================================
    // NOTIFICATION ANALYTICS
    // ========================================
    match /notificationAnalytics/{analyticsId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // ========================================
    // SCORING CONFIGURATION
    // ========================================
    match /scoringConfig/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // ========================================
    // SCORING WEIGHTS
    // ========================================
    match /scoringWeights/{weightId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // ========================================
    // CONFIG COLLECTION (General Settings)
    // ========================================
    match /config/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
