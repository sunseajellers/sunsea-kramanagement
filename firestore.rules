rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // HELPER FUNCTIONS (SIMPLIFIED FOR INTERNAL USE)
    // ========================================
    
    function isAuthenticated() {
      return request.auth != null && request.auth.uid != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Simplified admin check - no extra database lookups during read
    function isAdmin() {
      return isAuthenticated();
      // For strict admin checks, add to user document check later
      // exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
      // get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    function isManager() {
      return isAuthenticated();
      // Simplified for internal tool - all authenticated users can manage
    }
    
    // ========================================
    // USERS COLLECTION (RELAXED FOR INTERNAL TOOL)
    // ========================================
    match /users/{userId} {
      allow read, write: if isAuthenticated();
    }
    
    // ========================================
    // TASKS COLLECTION (SIMPLIFIED FOR INTERNAL TOOL)
    // ========================================
    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }
    
    // ========================================
    // KRAs COLLECTION (FULL ACCESS FOR INTERNAL TOOL)
    // ========================================
    match /kras/{kraId} {
      allow read, write: if isAuthenticated();
    }
    
    // ========================================
    // TEAMS COLLECTION (FULL ACCESS FOR INTERNAL TOOL)
    // ========================================
    match /teams/{teamId} {
      allow read, write: if isAuthenticated();
    }
    
    // ========================================
    // NOTIFICATIONS & REMINDERS (FULL ACCESS FOR INTERNAL TOOL)
    // ========================================
    match /notifications/{id} { allow read, write: if isAuthenticated(); }
    match /reminders/{id} { allow read, write: if isAuthenticated(); }
    
    // ========================================
    // TEMPLATES (FULL ACCESS FOR INTERNAL TOOL)
    // ========================================
    match /taskTemplates/{id} {
      allow read, write: if isAuthenticated();
    }
    match /kraTemplates/{id} {
      allow read, write: if isAuthenticated();
    }
    
    // ========================================
    // PERFORMANCE & CONFIG (FULL ACCESS FOR INTERNAL TOOL)
    // ========================================
    match /performanceParameters/{id} { allow read, write: if isAuthenticated(); }
    match /scoringConfig/{id} { allow read, write: if isAuthenticated(); }
    match /scoringWeights/{id} { allow read, write: if isAuthenticated(); }
    match /config/{id} { allow read, write: if isAuthenticated(); }
    match /header_config/{id} { allow read, write: if isAuthenticated(); }
    
    // ========================================
    // HOLIDAYS (FULL ACCESS FOR INTERNAL TOOL)
    // ========================================
    match /holidays/{id} {
      allow read, write: if isAuthenticated();
    }

    // ========================================
    // TASK REVISIONS (FULL ACCESS FOR INTERNAL TOOL)
    // ========================================
    match /taskRevisions/{id} {
      allow read, write: if isAuthenticated();
    }

    // ========================================
    // BULK OPERATIONS (FULL ACCESS FOR INTERNAL TOOL)
    // ========================================
    match /bulkTaskOperations/{id} {
      allow read, write: if isAuthenticated();
    }

    // ========================================
    // SCORES & REPORTS (FULL ACCESS FOR INTERNAL TOOL)
    // ========================================
    match /performanceScores/{id} {
      allow read, write: if isAuthenticated();
    }
    match /misReports/{id} {
      allow read, write: if isAuthenticated();
    }
    match /weeklyReports/{id} {
      allow read, write: if isAuthenticated();
    }

    // ========================================
    // UTILS & TRACKING (FULL ACCESS FOR INTERNAL TOOL)
    // ========================================
    match /filterPresets/{id} { allow read, write: if isAuthenticated(); }
    match /taskUpdates/{id} { allow read, write: if isAuthenticated(); }
    match /kpis/{id} { allow read, write: if isAuthenticated(); }
    match /admin_logs/{id} { allow read, write: if isAuthenticated(); }
    match /notificationRules/{id} { allow read, write: if isAuthenticated(); }
    match /notificationAnalytics/{id} { allow read, write: if isAuthenticated(); }
    
    // ========================================
    // ACTIVITY LOGS (FULL ACCESS FOR INTERNAL TOOL)
    // ========================================
    match /activityLogs/{id} {
      allow read, write: if isAuthenticated();
    }
    
    match /auditLogs/{id} {
      allow read, write: if isAuthenticated();
    }

    // ========================================
    // LEGACY (FULL ACCESS FOR INTERNAL TOOL)
    // ========================================
    match /roles/{id} { allow read, write: if isAuthenticated(); }
    match /permissions/{id} { allow read, write: if isAuthenticated(); }
    match /role_permissions/{id} { allow read, write: if isAuthenticated(); }
  }
}
