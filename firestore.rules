rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // HELPERS
    // ========================================
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isAuthenticated() && 
        (getUserData().isAdmin == true || 
         getUserData().isAdmin == 'true' || 
         'admin' in getUserData().roleIds);
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ========================================
    // CORE COLLECTIONS
    // ========================================
    
    // Users: Users can read all (directory), update own profile. Admins can manage all.
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Tasks: Collaborative but restricted updates.
    match /tasks/{taskId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAdmin() || 
                      (request.auth.uid in resource.data.assignedTo) || 
                      (request.auth.uid == resource.data.assignedBy);
      allow delete: if isAdmin();

      // Subcollections follow parent restriction or specific logic
      match /checklist/{itemId} { 
        allow read: if isAuthenticated();
        allow write: if isAdmin() || (request.auth.uid in get(/databases/$(database)/documents/tasks/$(taskId)).data.assignedTo);
      }
      match /activityLog/{logId} { 
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if isAdmin();
      }
      match /comments/{commentId} { 
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
      }
    }
    
    // Tickets: Privacy for requester and assignee
    match /tickets/{ticketId} {
      allow read: if isAdmin() || 
                   resource.data.requesterId == request.auth.uid || 
                   resource.data.assignedTo == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAdmin() || 
                      resource.data.requesterId == request.auth.uid || 
                      resource.data.assignedTo == request.auth.uid;
      allow delete: if isAdmin();
      
      match /comments/{commentId} { 
        allow read: if isAdmin() || 
                     get(/databases/$(database)/documents/tickets/$(ticketId)).data.requesterId == request.auth.uid || 
                     get(/databases/$(database)/documents/tickets/$(ticketId)).data.assignedTo == request.auth.uid;
        allow write: if isAuthenticated();
      }
    }
    
    // ========================================
    // ADMIN / CONFIG (PROTECTED)
    // ========================================
    
    match /departments/{deptId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    match /teams/{teamId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /config/{docId} { 
      allow read: if isAuthenticated();
      allow write: if isAdmin(); 
    }
    
    match /scoringConfig/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // ========================================
    // PERFORMANCE MODULES
    // ========================================
    // These are critical business records
    match /kras/{kraId} { 
      allow read: if isAuthenticated(); 
      allow write: if isAdmin(); 
    }
    match /kraTemplates/{templateId} { 
      allow read: if isAuthenticated(); 
      allow write: if isAdmin(); 
    }
    match /kpis/{kpiId} { 
      allow read: if isAuthenticated(); 
      allow write: if isAdmin(); 
    } 
    match /kpiTemplates/{templateId} { 
      allow read: if isAuthenticated(); 
      allow write: if isAdmin(); 
    }
    match /objectives/{objId} { 
      allow read: if isAuthenticated(); 
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isAdmin() || resource.data.ownerId == request.auth.uid; 
      allow delete: if isAdmin();
    }
    match /keyResults/{krId} { 
      allow read: if isAuthenticated(); 
      allow create: if isAuthenticated();
      allow update: if isAdmin() || get(/databases/$(database)/documents/objectives/$(resource.data.objectiveId)).data.ownerId == request.auth.uid; 
      allow delete: if isAdmin();
    }
    match /performanceScores/{scoreId} { 
      allow read: if isAuthenticated(); 
      allow write: if isAdmin(); 
    }
    match /performanceParameters/{paramId} { 
      allow read: if isAuthenticated(); 
      allow write: if isAdmin(); 
    }
    
    match /weeklyReports/{reportId} {
      allow read: if isAdmin() || resource.data.userId == request.auth.uid;
      allow write: if isAdmin();
    }
    
    match /teamWeeklyReports/{reportId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // ========================================
    // KNOWLEDGE BASE
    // ========================================
    match /learningHub/{docId} { 
      allow read: if isAuthenticated(); 
      allow write: if isAdmin(); 
    }
    match /articles/{articleId} { 
      allow read: if isAuthenticated(); 
      allow write: if isAdmin(); 
    }
    match /categories/{catId} { 
      allow read: if isAuthenticated(); 
      allow write: if isAdmin(); 
    }
    match /faqs/{faqId} { 
      allow read: if isAuthenticated(); 
      allow write: if isAdmin(); 
    }

    // ========================================
    // LOGS & NOTIFICATIONS
    // ========================================
    match /notifications/{notifId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.userId); 
      allow delete: if isOwner(resource.data.userId);
    }

    match /activityLogs/{logId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    match /admin_logs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    match /taskUpdates/{updateId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // ========================================
    // MISC
    // ========================================
    match /filterPresets/{presetId} {
      allow read, write: if isOwner(resource.data.userId) || isOwner(request.resource.data.userId);
    }
    match /holidays/{holidayId} { 
      allow read: if isAuthenticated(); 
      allow write: if isAdmin(); 
    }
    match /scoringWeights/{weightId} { 
      allow read: if isAuthenticated(); 
      allow write: if isAdmin(); 
    }
    match /taskRevisions/{revId} { 
      allow read: if isAuthenticated(); 
      allow write: if isAuthenticated(); 
    }
    match /bulkTaskOperations/{opId} { 
      allow read: if isAdmin(); 
      allow write: if isAdmin(); 
    }
    match /misReports/{reportId} { 
      allow read: if isAdmin() || resource.data.userId == request.auth.uid; 
      allow write: if isAdmin(); 
    }
    match /reminders/{reminderId} {
      allow read, write: if isOwner(resource.data.userId) || isOwner(request.resource.data.userId) || isAdmin();
    }
    match /taskTemplates/{templateId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Catch-all
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
