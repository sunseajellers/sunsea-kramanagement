rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // HELPER FUNCTIONS
    // ========================================
    
    function isAuthenticated() {
      return request.auth != null && request.auth.uid != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    function isManager() {
      // For now, treating admins as managers, or checking a specific role if we add it
      return isAdmin() || (
        isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isManager == true
      );
    }
    
    // ========================================
    // USERS COLLECTION
    // ========================================
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if (isOwner(userId) && request.resource.data.isAdmin == false) || isAdmin();
      allow update: if isOwner(userId) && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin', 'roleIds', 'isActive']);
      allow update, delete: if isAdmin();
    }
    
    // ========================================
    // TASKS COLLECTION
    // ========================================
    match /tasks/{taskId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        request.auth.uid in resource.data.assignedTo ||
        request.auth.uid == resource.data.assignedBy ||
        isAdmin() || isManager()
      );
      allow delete: if isAdmin();
    }
    
    // ========================================
    // KRAs COLLECTION
    // ========================================
    match /kras/{kraId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isManager();
    }
    
    // ========================================
    // TEAMS COLLECTION
    // ========================================
    match /teams/{teamId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }
    
    // ========================================
    // NOTIFICATIONS & REMINDERS
    // ========================================
    match /notifications/{id} { allow read, write: if isAuthenticated(); }
    match /reminders/{id} { allow read, write: if isAuthenticated(); }
    
    // ========================================
    // TEMPLATES
    // ========================================
    match /taskTemplates/{id} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    match /kraTemplates/{id} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // ========================================
    // PERFORMANCE & CONFIG
    // ========================================
    match /performanceParameters/{id} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /scoringConfig/{id} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /scoringWeights/{id} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /config/{id} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /header_config/{id} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    
    // ========================================
    // HOLIDAYS
    // ========================================
    match /holidays/{id} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // ========================================
    // TASK REVISIONS
    // ========================================
    match /taskRevisions/{id} {
      allow read: if isAuthenticated();
      allow create: if isAdmin() || isManager();
      allow update: if isAuthenticated() && (
        request.auth.uid == resource.data.resolvedBy || 
        isAdmin() || isManager()
      );
      allow delete: if isAdmin();
    }

    // = [NEW] BULK OPERATIONS =
    match /bulkTaskOperations/{id} {
      allow read, write: if isAuthenticated() && (request.auth.uid == resource.data.createdBy || isAdmin());
    }

    // = [NEW] SCORES & REPORTS =
    match /performanceScores/{id} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isManager();
    }
    match /misReports/{id} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    match /weeklyReports/{id} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isManager();
    }

    // ========================================
    // UTILS & TRACKING
    // ========================================
    match /filterPresets/{id} { allow read, write: if isAuthenticated(); }
    match /taskUpdates/{id} { allow read, write: if isAuthenticated(); }
    match /kpis/{id} { allow read, write: if isAuthenticated(); }
    match /admin_logs/{id} { allow read: if isAdmin(); allow create: if isAuthenticated(); }
    match /notificationRules/{id} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /notificationAnalytics/{id} { allow read: if isAuthenticated(); allow write: if isAdmin(); }

    // ========================================
    // LEGACY
    // ========================================
    match /roles/{id} { allow read, write: if isAdmin(); }
    match /permissions/{id} { allow read, write: if isAdmin(); }
    match /role_permissions/{id} { allow read, write: if isAdmin(); }
  }
}
