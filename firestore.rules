rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Simple rule: All authenticated users have full access
    // RBAC permissions are enforced server-side via API routes
    
    function isAuthenticated() {
      return request.auth != null && request.auth.uid != null;
    }

    // Catch-all rule for all collections
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
